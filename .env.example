# Environment Configuration Example
# Copy this file to .env and update with your actual values

# API Gateway Configuration
PORT=8000
LOG_LEVEL=info
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
ALLOWED_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Auth Service Configuration
AUTH_PORT=8001

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=truckify
DB_PASSWORD=truckify_password
DB_NAME=truckify
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# MongoDB Configuration
MONGO_URI=mongodb://truckify:truckify_password@localhost:27017
MONGO_DATABASE=truckify
MONGO_MAX_CONNS=100
MONGO_MIN_CONNS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=truckify_password
REDIS_DB=0
REDIS_MAX_CONNS=10
REDIS_MIN_CONNS=5

# NATS Configuration
NATS_URL=nats://localhost:4222

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500

# JWT Configuration
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_HOURS=168

# Email Configuration (for later implementation)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@truckify.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=noreply@truckify.com

# AWS Configuration (optional, for production)
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Application Configuration
APP_ENV=development
APP_DEBUG=true
